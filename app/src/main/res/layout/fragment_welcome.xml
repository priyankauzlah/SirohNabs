<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".fragment.WelcomeFragment">

    <Button
        android:id="@+id/btn_mulai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape_round"
        android:fontFamily="@font/poppins_semibold"
        android:text="Mulai"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_nabs"
        app:layout_constraintStart_toStartOf="@+id/tv_nabs"
        app:layout_constraintTop_toBottomOf="@+id/tv_nabs" />

    <TextView
        android:id="@+id/tv_siroh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:fontFamily="@font/ranille"
        android:rotationX="20"
        android:text="Siroh"
        android:textColor="@color/darkblue"
        android:textSize="110sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:fontFamily="@font/ranille"
        android:rotationX="-20"
        android:text="Nabs"
        android:textColor="@color/darkblue"
        android:textSize="120sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_siroh"
        app:layout_constraintStart_toStartOf="@+id/tv_siroh"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
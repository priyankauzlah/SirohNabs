<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_won"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WonFragment">

    <TextView
        android:id="@+id/tv_selamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Selamat!"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/reward"
        app:layout_constraintEnd_toEndOf="@+id/tv_selamat"
        app:layout_constraintStart_toStartOf="@+id/tv_selamat"
        app:layout_constraintTop_toBottomOf="@+id/tv_selamat" />

    <TextView
        android:id="@+id/tv_brief_won"
        android:layout_width="331dp"
        android:layout_height="66dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins"
        android:text="Anda telah menyelesaikan quiz siroh nabawiyah dengan benar"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_reward"
        app:layout_constraintStart_toStartOf="@+id/iv_reward"
        app:layout_constraintTop_toBottomOf="@+id/iv_reward" />

    <Button
        android:id="@+id/btn_alhamdulillah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape_round"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:text="Alhamdulillah"
        app:layout_constraintEnd_toEndOf="@+id/tv_brief_won"
        app:layout_constraintStart_toStartOf="@+id/tv_brief_won"
        app:layout_constraintTop_toBottomOf="@+id/tv_brief_won" />
</androidx.constraintlayout.widget.ConstraintLayout>